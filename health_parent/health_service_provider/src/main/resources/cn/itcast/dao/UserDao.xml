<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.itcast.dao.UserDao">
    <!--查询所有-->
    <select id="findAll" resultType="User">select * from  user ; </select>
    <!--添加user-->
    <insert id="add" parameterType="User"> insert user values(#{id},#{name},#{money})</insert>
    <!--修改user-->
    <update id="update" parameterType="User">update user set name = #{name},money=#{money} where id = #{id}</update>
    <!--删除-->
    <delete id="delete" parameterType="User">delete from user where id=#{id}</delete>





</mapper>
